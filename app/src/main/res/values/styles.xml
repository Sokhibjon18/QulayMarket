<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="tabLayout" parent="android:Widget">
        <item name="tabSelectedTextColor">@color/magenta</item>
        <item name="tabTextAppearance">@style/MyMaterialTheme.TabLayout.TextAppearance</item>
        <item name="tabTextColor">@color/grey</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="android:gravity">center_vertical</item>
